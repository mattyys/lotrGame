      </HBox>
      <JFXComboBox fx:id="cb_raza" prefHeight="32.0" prefWidth="227.0" promptText="Seleccionar ..." styleClass="combo-seleccionar" GridPane.columnIndex="1" GridPane.rowIndex="2" />
