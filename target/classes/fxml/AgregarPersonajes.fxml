            </JFXRadioButton>
            <JFXRadioButton fx:id="rb_bestias" onAction="#onSelectBestias" text="Bestias" toggleGroup="$tg_rb_tipo_personajes" />
         </children>
         <opaqueInsets>
            <Insets />
